<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.GridLayout
            android:layout_width="385dp"
            android:layout_height="357dp"
            android:id="@+id/gridLayout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="126dp">

        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView"
                app:layout_column="0"
                app:layout_row="0"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView1"
                app:layout_column="1"
                app:layout_row="0"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView2"
                app:layout_column="2"
                app:layout_row="0"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView3"
                app:layout_column="0"
                app:layout_row="1"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView4"
                app:layout_column="1"
                app:layout_row="1"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView5"
                app:layout_column="2"
                app:layout_row="1"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView6"
                app:layout_column="0"
                app:layout_row="2"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView7"
                app:layout_column="1"
                app:layout_row="2"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/p"
                android:id="@+id/imageView8"
                app:layout_column="2"
                app:layout_row="2"
                android:onClick="increaseScore"
        />
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time: 10"
            android:layout_width="166dp"
            android:layout_height="56dp"
            android:id="@+id/timetext"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:layout_marginTop="146dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp" android:textSize="30sp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="196dp"
            android:layout_height="56dp"
            android:id="@+id/scoretext"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timetext" android:layout_marginStart="104dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Try Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/Button" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/timetext"
            android:onClick="retry"/>
</android.support.constraint.ConstraintLayout>